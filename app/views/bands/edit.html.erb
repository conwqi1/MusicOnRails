<h1>Edit band info</h1>

<form action="<%= band_url(@band) %>" method="post">
           
  <label for="band_name">BandName:</label>
  <input 
    type="text" 
    name="band[band_name]" 
    id = "band_band_name" 
    value="<%=@band.band_name %>">
  <br>
  <input name="_method" type="hidden" value="PATCH">
  <input type="submit" value="submit">
</form>